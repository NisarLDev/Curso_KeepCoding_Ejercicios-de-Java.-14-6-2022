package com.ejemplo.crud_jdbc_9_6_2022;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class Conexion {

	
		public static String databasename="test1";
		public static String dbURL = "jdbc:mysql://localhost:3306/"+databasename;
		public static String username ="root";
		public static String password = "";
		
		
		public static void conexion() {
			try {
				Connection conect = DriverManager.getConnection(dbURL,username,password);
				if(conect !=null) {
					System.out.println("Conexión exitosa a la base de datos");
				}
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}	
			
			finally {
					System.out.println("Fin de la conexión a la base de datos");
					}
			

			
		}
		
	
}
